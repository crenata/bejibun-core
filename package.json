{
    "name": "@bejibun/core",
    "version": "0.1.23",
    "description": "Core of Bejibun Framework",
    "keywords": [
        "bun",
        "bun framework",
        "core",
        "bejibun",
        "typescript"
    ],
    "homepage": "https://github.com/crenata/bejibun-core#readme",
    "bugs": {
        "url": "https://github.com/crenata/bejibun-core/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/crenata/bejibun-core.git"
    },
    "license": "MIT",
    "author": "Havea Crenata <havea.crenata@gmail.com>",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./bootstrap": {
            "import": "./dist/bootstrap.js",
            "types": "./dist/bootstrap.d.ts"
        },
        "./bases/*": {
            "import": "./dist/bases/*.js",
            "types": "./dist/bases/*.d.ts"
        },
        "./enums/*": {
            "import": "./dist/enums/*.js",
            "types": "./dist/enums/*.d.ts"
        },
        "./exceptions/*": {
            "import": "./dist/exceptions/*.js",
            "types": "./dist/exceptions/*.d.ts"
        },
        "./facades/*": {
            "import": "./dist/facades/*.js",
            "types": "./dist/facades/*.d.ts"
        },
        "./types/*": {
            "import": "./dist/types/*.js",
            "types": "./dist/types/*.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "build": "bun run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && cp -rf src/types dist/types",
        "deploy": "bun run build && npm publish --access public"
    },
    "dependencies": {
        "@vinejs/vine": "^3.0.1",
        "chalk": "^5.6.2",
        "knex": "^3.1.0",
        "luxon": "^3.7.2",
        "objection": "^3.1.5",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/luxon": "^3.7.1",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
