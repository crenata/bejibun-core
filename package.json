    },
    "main": "index.js",
    "module": "index.js",
    "dependencies": {
        "@bejibun/app": "^0.1.22",
        "@bejibun/cache": "^0.1.11",
        "@bejibun/cors": "^0.1.16",
        "@bejibun/database": "^0.1.19",
        "@bejibun/logger": "^0.1.22",
        "@bejibun/utils": "^0.1.22",
        "@vinejs/vine": "^3.0.1",
        "commander": "^14.0.2",
        "luxon": "^3.7.2",
        "objection": "^3.1.5"
    },
    "devDependencies": {
        "@bejibun/x402": "^0.1.1",
        "@types/bun": "latest",
        "@types/luxon": "^3.7.1",
        "tsc-alias": "^1.8.16"
    },
    "bugs": {
        "url": "https://github.com/crenata/bejibun-core/issues"
    },
    "description": "Core of Bejibun Framework",
    "homepage": "https://github.com/crenata/bejibun-core#readme",
    "keywords": [
        "bun",
        "bun framework",
        "core",
        "bejibun",
        "typescript"
    ],
    "license": "MIT",
    "scripts": {
        "alias": "bunx tsc-alias -p tsconfig.json",
        "clean-stubs": "rm -rf stubs",
        "stubs": "cp -rf src/stubs dist",
        "types": "cp -rf src/types dist",
        "rsync": "rsync -a dist/ ./",
        "clean": "rm -rf dist",
        "build": "bun run clean-stubs && bunx tsc -p tsconfig.json && bun run types && bun run alias && bun run stubs && bun run rsync && bun run clean",
        "deploy": "bun run build && bun publish --access public"
    },
    "type": "module",
    "types": "index.d.ts"
}
